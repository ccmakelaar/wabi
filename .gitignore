# ignore everything in the root except the "wp-content" directory.
/*
!wp-content/
!src/

# Ignore wp-content directory files.
wp-content/mu-plugins/*
wp-content/plugins/*
wp-content/themes/*
wp-content/uploads/*
wp-content/languages/*

# Ignore all files starting with . or ~.
.*
~*

# Ignore package dependency files.
node_modules/
yarn.lock
mix-manifest.json

# Ignore OS generated files.
thumbs.db
Thumbs.db

# Ignore editor files.
*.sublime-workspace
.sublime-gulp.cache

# Ignore log files and databases.
*.log
*.sql
*.sqlite
*.sql.gz

# Ignore packaged files.
*.7z
*.dmg
*.gz
*.iso
*.jar
*.rar
*.tar
*.zip

# Track root directory files.
!*.sublime-project
!.gitignore
!.gitkeep
!.editorconfig
!README.md
!CHANGELOG.md
!composer.json
!salts.php
!robots.txt
!Movefile
!LICENSE
!example.htaccess
!example.env
!wp-config.php
!.stylelintrc
!.eslintrc
!.jshintrc
!.csscomb.json

# Track theme directory.
!wp-content/themes/lillehummernl/

# Ignore build files.
wp-content/themes/lillehummernl/css
wp-content/themes/lillehummernl/js
wp-content/themes/lillehummernl/img
wp-content/themes/lillehummernl/src/rev/css
wp-content/themes/lillehummernl/src/rev/js
manifest.json
